#!/bin/bash
set -e

if [[ -d "${installabs}/include/CPPExtensions" ]]; then
	(cd headers && .extra/rmdep)
fi

echo "making include directory"
mkdir -p -v "${installabs}/include/CPPExtensions/.part"
echo "installing header files"
cp --preserve=timestamps -u -t "${installabs}/include/CPPExtensions" headers/*.hpp
cp --preserve=timestamps -u -t "${installabs}/include/CPPExtensions/.part" headers/.part/*.hpp
