#!/bin/bash
set -e

if [[ -d "${installdir}/include/CustomUtils" ]]; then
	echo "removing previous header installation" >&2
	rm -r "${installdir}/include/CustomUtils"
fi

echo "making include directory" >&2
mkdir -p "${installdir}/include/CustomUtils"
echo "installing header files" >&2
cp -u -t "${installdir}/include/CustomUtils" headers/*.hpp
