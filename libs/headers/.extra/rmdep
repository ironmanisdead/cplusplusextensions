#!/bin/bash
set -e

declare -- item included
for included in "${installabs}"/include/CPPExtensions/*.hpp; do
	if [[ ! -f "${included}" ]]; then
		continue
	fi
	item="${included#"${installabs}/include/CPPExtensions/"}"
	if [[ ! -f "$item" ]]; then
		rm -v "$included"
	fi
done
for included in "${installabs}"/include/CPPExtensions/.hide/*.hpp; do
	if [[ ! -f "${included}" ]]; then
		continue
	fi
	item="${included#"${installabs}/include/CPPExtensions/"}"
	if [[ ! -f "$item" ]]; then
		rm -v "$included"
	fi
done
